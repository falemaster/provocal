{
  "manifest_version": 3,
  "name": "CallSync - Pipedrive Call Recorder",
  "version": "1.0.0",
  "description": "Enregistrez vos appels et synchronisez avec Pipedrive",
  "permissions": [
    "storage",
    "tabs"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+Y",
        "mac": "Alt+Shift+Y"
      },
      "description": "Ouvrir CallSync"
    }
  },
  "host_permissions": [
    "https://*.pipedrive.com/*",
    "https://apxsxhaftjqqidysiktn.supabase.co/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup/popup.html", "popup/popup.css", "popup/popup.js", "config.js"],
      "matches": ["https://*.pipedrive.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.pipedrive.com/*"],
      "js": ["content/pipedrive.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.pipedrive.com/*"],
      "js": ["content/floating-button.js"],
      "css": ["content/floating-button.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
